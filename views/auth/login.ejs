<% layout('layouts/boilerPlate') %>
<%- include('../partials/flash') %> 

<div class="row" style="margin-top: 80px;">
    <div class="col-6 mx-auto">
        <h1 class="display-6 mb-4">Login Here</h1>
        <form action="/login" method="POST">
            <div class="mb-3">
                <label for="username" class="form-label">Username: </label>
                <input type="text" class="form-control" name="username" id="username" placeholder="Please Enter Your Name" required>
            </div>
            <div class="mb-3">
                <label for="password" class="form-label">Password: </label>
                <input type="password" class="form-control" name="password" id="password" placeholder="Enter Your Password" required>
            </div>
            <button type="submit" class="btn btn-sm btn-success">Login</button>
            <p class="mt-2">doesn't  have any account? <a href="/register">Register here</a></p>
        </form>
    </div>
</div>

